/* pages/postComments/postComments.wxss */
/* tools */
page{
  background:#f5f5f5;
   overflow: hidden; 
}
.page-content{
    background-color: #fff;
    padding-bottom: 60rpx;
}
.tools{
    padding: 50rpx 92rpx 0;
    position: absolute;
    left: 0;
    top:600rpx; 
    width:calc(100% - 184rpx);
    z-index: 100000;
}
.tools .post-btn{
    width: 100%;
    height: 82rpx;
    line-height: 82rpx;
    font-size: 32rpx;
    color: #fff;
    background-color: #ccc;
    border-radius: 82rpx;
    text-align: center;

}
.tools .post-btn.on{
    background-color: #ee2d1b;
}

/* textarea */
textarea{
    width: 100%;
    padding: 30rpx;
    box-sizing: border-box;
    font-size: 34rpx;
}

/* imgs */
.imgs{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 30rpx;
}
.imgs .item{
    flex-shrink: 0;
    width: 23.5%;
    margin-right: 2%;
    padding-top: 2%;
}
.imgs .item:nth-child(4n+4){
    margin-right: 0;
}
.imgs .item .desc{
    width: 100%;
    padding-top: 100%;
    position: relative
}
.imgs .item.add .desc{
    border: 1px solid #eaeaea;
    box-sizing: border-box;
    background: url(http://mued3.jia.com/image/mobile/zx_circle/add_icon.png) center center no-repeat;
    background-size: 52rpx;
}
.imgs .item image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}
.imgs .item icon{
    display: inline-block;
    width: 36rpx;
    height: 36rpx;
    background: url(//mued3.jia.com/image/mobile/zx_circle/del_img.png) no-repeat;
    background-size: 100%;
    position: absolute;
    right: 0;
    top: 0;
    border-bottom-left-radius: 16rpx;
    z-index: 2;
}